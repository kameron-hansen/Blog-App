<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        New Blog
    </div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title:</label>
            <input type="text" name="blog[title]" placeholder="Add a title: ">
        </div>
        <div class="field">
            <label>Image:</label>
            <input type="text" name="blog[image]" placeholder="Add an image url: ">
        </div>
        <div class="field">
            <label>Create a post:</label>
            <textarea name="blog[body]" placeholder="What's on your mind?"></textarea>
        </div>
        <input type="submit" class="ui teal basic button">
    </form>
</div>

