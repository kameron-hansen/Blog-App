<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit "<%= blog.title %>":
    </div>
    <!--?_method=PUT = method overide-->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title:</label>
            <input type="text" name="blog[title]" placeholder="Add a title: " value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image:</label>
            <input type="text" name="blog[image]" placeholder="Add an image url: " value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Create a post:</label>
            <textarea name="blog[body]" placeholder="What's on your mind?"> <%= blog.body %> </textarea>
        </div>
        <input type="submit" class="ui teal basic button">
    </form>
</div>

<% include partials/footer %>
